<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrlView" android:layout_width="fill_parent" android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/pick_answer"
                android:layout_marginTop="35dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView"
                android:textSize="20sp"/>

        <TextView
                android:text="@string/questionProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/questionProgress"/>

        <FrameLayout
                android:orientation="vertical"
                android:id="@+id/inclusionlayout"
                android:layout_width="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="fill_parent">
        </FrameLayout>

    </LinearLayout>
</ScrollView>